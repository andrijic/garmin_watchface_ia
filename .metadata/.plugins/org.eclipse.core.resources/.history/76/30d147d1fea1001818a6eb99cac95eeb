using Toybox.WatchUi as Ui;
using Toybox.Graphics as Gfx;
using Toybox.System as Sys;
using Toybox.Time.Gregorian;
using Toybox.Time;

class garmin_watchface_iaView extends Ui.View {

	var customFont = null;

    function initialize() {
        View.initialize();
    }

    function onLayout(dc) {
        customFont = Ui.loadResource(Rez.Fonts.bodoni_font);
        setLayout(Rez.Layouts.MainLayout(dc));
    }

   
    function onUpdate(dc) {
    	View.onUpdate(dc);
       dc.setColor(Gfx.COLOR_BLACK, Gfx.COLOR_BLACK);
       dc.clear();
       var clockTime = Sys.getClockTime();
       var hour = clockTime.hour;
       var minutes = clockTime.min;
       
       
       dc.setColor(Gfx.COLOR_WHITE, Gfx.COLOR_WHITE);
       dc.fillRectangle(0, 0, dc.getWidth()/2, dc.getHeight());
       
       dc.setColor(Gfx.COLOR_RED, Gfx.COLOR_WHITE);
       dc.drawText(dc.getWidth()/2, 22, customFont,hour.format("%02d"), Gfx.TEXT_JUSTIFY_RIGHT);
       
       dc.setColor(Gfx.COLOR_GREEN, Gfx.COLOR_BLACK);
       dc.drawText(dc.getWidth()/2, 22, customFont, minutes.format("%02d"), Gfx.TEXT_JUSTIFY_LEFT);
       
     
     	/*date on top*/
     	var date = Time.now();
     	var info = Gregorian.info(date, Time.FORMAT_LONG);
     	
     	var clockString1 = Lang.format(
		    "$1$.$2$.$3$",
		    [
		        info.day,
		       info.month,
		       info.year
		    ]
		);
     	
     	dc.setColor(Gfx.COLOR_RED, Gfx.COLOR_TRANSPARENT);
     	dc.drawText(dc.getWidth()/2, 10, Gfx.FONT_SMALL, clockString1, Gfx.TEXT_JUSTIFY_CENTER);
       
    }

    // Called when this View is removed from the screen. Save the
    // state of this View here. This includes freeing resources from
    // memory.
    function onHide() {
    }

}
